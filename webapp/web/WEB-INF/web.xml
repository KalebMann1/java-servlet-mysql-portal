<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Project 4</display-name>

    <!-- Login servlet -->
    <servlet>
        <servlet-name>AuthenticationServlet</servlet-name>
        <servlet-class>AuthenticationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AuthenticationServlet</servlet-name>
        <url-pattern>/authenticate</url-pattern>
    </servlet-mapping>

    <!-- Root user SQL servlet -->
    <servlet>
        <servlet-name>RootUserServlet</servlet-name>
        <servlet-class>RootUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RootUserServlet</servlet-name>
        <url-pattern>/RootUserServlet</url-pattern>
    </servlet-mapping>

    <!-- Client user servlet -->
    <servlet>
        <servlet-name>ClientUserServlet</servlet-name>
        <servlet-class>ClientUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClientUserServlet</servlet-name>
        <url-pattern>/ClientUserServlet</url-pattern>
    </servlet-mapping>

    <!-- Data Entry user servlet -->
    <servlet>
        <servlet-name>DataEntryServlet</servlet-name>
        <servlet-class>DataEntryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DataEntryServlet</servlet-name>
        <url-pattern>/DataEntryServlet</url-pattern>
    </servlet-mapping>

    <!-- Accountant user servlet -->
    <servlet>
        <servlet-name>AccountantUserServlet</servlet-name>
        <servlet-class>AccountantUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AccountantUserServlet</servlet-name>
        <url-pattern>/AccountantUserServlet</url-pattern>
    </servlet-mapping>


</web-app>
